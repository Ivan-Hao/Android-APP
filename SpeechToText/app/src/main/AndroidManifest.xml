<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.speechtotext">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:networkSecurityConfig="@xml/network_security_config"

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RegisterActivity"
            android:label="@string/titleRegisterActivity" />

        <activity
            android:name=".MethodActivity"
            android:label="@string/titleMethodActivity" />

        <activity
            android:name=".HandSpeechActivity"
            android:label="@string/titleHandSpeechActivity" />

        <activity
            android:name=".HandActivity"
            android:label="@string/titleHandActivity" />

        <activity
            android:name=".SpeechActivity"
            android:label="@string/titleSpeechActivity" />

        <activity
            android:name=".KeyActivity"
            android:label="@string/titleKeyActivity" />

        <activity
            android:name=".ResultsActivity"
            android:label="@string/titleResultsActivity" />




    </application>

</manifest>